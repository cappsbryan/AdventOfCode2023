{
  "compilerOptions": {
    "module": "NodeNext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
